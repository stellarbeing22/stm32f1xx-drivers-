#include "stm32f103xx_i2c_drivers.h"


/* GPIO peripheral clock */
void I2C_PeriClockControl(I2C_RegDef_t *pI2Cx, uint8_t En_or_Di)
{
	if(En_or_Di == ENABLE)
	{
		if(pI2Cx == I2C1)
		{
			I2C1_PCLK_EN;
		}else
		{
			I2C2_PCLK_EN;
		}
	}else
	{
		if(pI2Cx == I2C1)
		{
			I2C1_PCLK_EN;
		}else
		{
			I2C2_PCLK_EN;
		}
	}
}

